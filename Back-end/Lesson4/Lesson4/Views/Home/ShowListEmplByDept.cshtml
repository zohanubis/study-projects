@model Lesson4.Models.Deparment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowListEmplByDept</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div>
            <h4>Department</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Mã Phòng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DeptId)
                </dd>

                <dt class="col-sm-2">
                    Tên Phòng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>

        <h4>Nhân Viên ở phòng ban :</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Giới Tính</th>
                    <th>Thành Phố</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in ViewBag.empList)
                {
                    <tr>
                        <td>@employee.ID</td>
                        <td>@employee.Name</td>
                        <td>@employee.Gender</td>
                        <td>@employee.City</td>
                    </tr>
                }
            </tbody>
        </table>

        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.DeptId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Back to List", "ShowDDLDept", new { @class = "btn btn-secondary" })
        </p>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
